def get_number_words(book):
    words = book.split()
    word_count = len(words)
    return word_count


def get_char_count(book):
    lower_case = book.lower()
    count_words = {}
    for char in lower_case:
        if char in count_words:
            count_words[char] += 1
        else:
            count_words[char] = 1
    return count_words


def sort_on(items):
    return items["num"]


def sort_char_dict(dictionary):
    dict = get_char_count(dictionary)
    sorted_list = [{"char": None, "Num": None}]
    for char in dict:
        num = dict[char]
        a = {"char": char, "num": num}
        sorted_list.append(a)
    print(sorted_list)
    sorted_list.sort(reverse=True, key=sort_on)
    return sorted_list
